{
	"compilerOptions": {
		"outDir": "./build",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"~/*": ["src/*"]
		},
		"module": "commonjs",
		"target": "es6",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
